<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="345dp"
        android:layout_height="561dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/banana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#07DD24"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/bananas"
                tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />

            <ImageButton
                android:id="@+id/cereza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/cerezas" />

            <ImageButton
                android:id="@+id/mora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#07DD24"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/frambuesas"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:id="@+id/fresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/fresas"
                tools:ignore="ImageContrastCheck,ImageContrastCheck" />

            <ImageButton
                android:id="@+id/kiwi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#07DD24"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/kiwis" />

            <ImageButton
                android:id="@+id/mango"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/mangos" />

            <ImageButton
                android:id="@+id/manzana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#07DD24"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/manzanas" />

            <ImageButton
                android:id="@+id/melon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/melon" />

            <ImageButton
                android:id="@+id/naranja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#07DD24"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/naranjas" />

            <ImageButton
                android:id="@+id/pera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/pera" />

            <ImageButton
                android:id="@+id/pinia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#07DD24"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/pina" />

            <ImageButton
                android:id="@+id/moraNegra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/zarzamora" />

            <ImageButton
                android:id="@+id/uvaVerde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#07DD24"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/uvas" />

            <ImageButton
                android:id="@+id/sandia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@drawable/sandia" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>